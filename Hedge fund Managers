--total networth for each hedge fund manager
SELECT manager.fullname, wealth.net_worth
FROM manager
JOIN wealth
ON manager.id=wealth.billionare_id;


--company of each headge fund manager
SELECT manager.fullname, wealth.source_wealth
FROM manager
JOIN wealth
ON manager.id=wealth.billionare_id;


--hedgefund managers 60 years old or younger
SELECT manager.fullname, wealth.net_worth, wealth.source_wealth
FROM manager
JOIN wealth
ON manager.id=wealth.id
GROUP BY age
HAVING age <= 60;


